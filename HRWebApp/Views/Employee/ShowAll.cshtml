@using HRWebApp.Models;
@{
    ViewData["Title"] = "Employee Page";
}

   <link rel="stylesheet"  href="~/css/table.css" type="text/css"/>

    <h3 align="center">All Employees</h3>

@{
        <table align="center">
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Address</th>
            <th>Password</th>
            <th>Department Id</th>
            <th>Manager Id</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var employee in ViewData["allemployees"] as List<Employee>)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Address</td>
                <td>@employee.Password</td>
                <td>@employee.DeptId</td>
                <td>@employee.ManagerId</td>
                <td><button>@Html.ActionLink("Update","Update","Employee",new{Id=employee.Id})</button></td>   
                <td><button>@Html.ActionLink("Delete","Delete","Employee",new{Id=employee.Id})</button></td>   
            </tr>
        }
    </table>

    
}
